{
  "labels": ["dependencies"],

  "enabledManagers": [
    "mise",
    "github-actions",
    "custom.regex",
    "gomod"
  ],

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.*ya?ml$"
        ],
      "matchStrings": [
        "MISE_VERSION:\\s*(?<currentValue>\\d{4}\\.\\d{2}\\.\\d{2})"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "{{#if versioning}}{{versioning}}{{else}}semver{{/if}}"
    }
  ]
}
